@model New_with_Views.Models.Entities.Actor

        <input class="form-control" type="hidden" asp-for="ActorID">
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.FirstName</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.LastName</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Birthday" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.Birthday</p>
            </div>
        </div>
        
