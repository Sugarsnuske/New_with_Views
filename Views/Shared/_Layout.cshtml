<!-- Shared View / Layout Page -->
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Movie</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
    <!--link rel="stylesheet" href="../css/style.css" -->
</head>

<body class="container" style="padding-top: 70px;">
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-controller="Movie" asp-action="Index">Movies</a></li>
                    <li><a asp-controller="Movie" asp-action="Create">Create New Movie</a></li>
                    <li><a asp-controller="Actor" asp-action="Index">Actors</a></li>
                    <li><a asp-controller="Actor" asp-action="Create">Create New Actor</a></li>
                </ul>
                <form class="navbar-form navbar-right" >
                    <div class="form-group">
                       
                            @using (Html.BeginForm())
                            {
                                <div class="form-control" style="background-color:#222222; border:none;">Search &nbsp &nbsp @Html.TextBox("SearchString")</div><input type="Submit" class="btn btn-info" value="Filter">
                            }
                </form>
            </div>
        </div>
    </nav>
    <div class="jumbotron" style="background-color: gray; text-align: center;">
        <h1>@ViewBag.Title</h1>
        <h3>@ViewBag.Phrase</h3>
    </div>

        @RenderBody()

    <address class="navbar-fixed-bottom">
        &copy; RHansen
    </address>

</body>

</html>